<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/shape_menu_bg3"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="4">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/ics_payment" />

        <TextView
            android:id="@+id/item_describtion"
            style="@style/txt_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:text="-"
            android:textColor="@color/White" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:src="@drawable/ics_price" />

        <TextView
            android:id="@+id/item_price"
            style="@style/txt_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:text="-"
            android:textColor="@color/White" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/ics_type" />

        <TextView
            android:id="@+id/item_type"
            style="@style/txt_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:text="-"
            android:textColor="@color/White" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:src="@drawable/ics_date" />

        <TextView
            android:id="@+id/item_date_time"

            style="@style/txt_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:text="-"
            android:textColor="@color/White" />
    </LinearLayout>

</RelativeLayout>